// Activer le lien de la prochaine étape lors de la validation du formulaire
function validateForm1() {
  const formInputs = document.querySelectorAll('#vert-tabs-general input');
  let isFormValid = true;
  for (let i = 0; i < formInputs.length; i++) {
    if (formInputs[i].value === '') {
      isFormValid = false;
      break;
    }
  }
  if (importateur.value == '') {
    importateur.classList.add('is-invalid');
  } else {
    importateur.classList.remove('is-invalid');
    importateur.classList.add('is-valid');
  }
  if (fournisseur.value=='') {
    fournisseur.classList.add('is-invalid');
  } else {
    fournisseur.classList.remove('is-invalid');
    fournisseur.classList.add('is-valid');
  }
  if (type.value=='') {
    type.classList.add('is-invalid');
  } else {
    type.classList.remove('is-invalid');
    type.classList.add('is-valid');
  }
  if (have_contrat.value=='') {
    have_contrat.classList.add('is-invalid');
  } else {
    have_contrat.classList.remove('is-invalid');
    have_contrat.classList.add('is-valid');
  }
  /*if (ref_contrat.value=='') {
    ref_contrat.classList.add('is-invalid');
  } else {
    ref_contrat.classList.remove('is-invalid');
    ref_contrat.classList.add('is-valid');
  }*/
  if (pays_dest.value=='') {
    pays_dest.classList.add('is-invalid');
  } else {
    pays_dest.classList.remove('is-invalid');
    pays_dest.classList.add('is-valid');
  }
  if (rel_client.value=='') {
    rel_client.classList.add('is-invalid');
  } else {
    rel_client.classList.remove('is-invalid');
    rel_client.classList.add('is-valid');
  }
  if (num_dossier.value=='') {
    num_dossier.classList.add('is-invalid');
  } else {
    num_dossier.classList.remove('is-invalid');
    num_dossier.classList.add('is-valid');
  }
  if (motif.value=='') {
    motif.classList.add('is-invalid');
  } else {
    motif.classList.remove('is-invalid');
    motif.classList.add('is-valid');
  }
  if (date_execution.value=='') {
    date_execution.classList.add('is-invalid');
  } else {
    date_execution.classList.remove('is-invalid');
    date_execution.classList.add('is-valid');
  }
  if (delai_justif.value=='') {
    delai_justif.classList.add('is-invalid');
  } else {
    delai_justif.classList.remove('is-invalid');
    delai_justif.classList.add('is-valid');
  }
  if (date_limite.value=='') {
    date_limite.classList.add('is-invalid');
  } else {
    date_limite.classList.remove('is-invalid');
    date_limite.classList.add('is-valid');
  }
  if (type_financement.value=='') {
    type_financement.classList.add('is-invalid');
  } else {
    type_financement.classList.remove('is-invalid');
    type_financement.classList.add('is-valid');
  }
  if (num_domiciliation.value=='') {
    num_domiciliation.classList.add('is-invalid');
  } else {
    num_domiciliation.classList.remove('is-invalid');
    num_domiciliation.classList.add('is-valid');
  }
  if (montant_domiciation.value=='') {
    montant_domiciation.classList.add('is-invalid');
  } else {
    montant_domiciation.classList.remove('is-invalid');
    montant_domiciation.classList.add('is-valid');
  }
  if (ref_sgs.value=='') {
    ref_sgs.classList.add('is-invalid');
  } else {
    ref_sgs.classList.remove('is-invalid');
    ref_sgs.classList.add('is-valid');
  }
  if (ref_pr.value=='') {
    ref_pr.classList.add('is-invalid');
  } else {
    ref_pr.classList.remove('is-invalid');
    ref_pr.classList.add('is-valid');
  }
  if (isFormValid) {
    // Activer le lien de la prochaine étape
    wizardNavLinks[10].classList.remove('disabled');
    wizardNavLinks[11].classList.remove('disabled');

    // Activer l'onglet de la prochaine étape
    const nextTab = document.querySelector('#vert-tabs-finance-tab');
    nextTab.classList.add('active');

    // Désactiver l'onglet de l'étape actuelle
    const currentTab = document.querySelector('#vert-tabs-general-tab');
    currentTab.classList.remove('show', 'active');

    // Mettre à jour l'onglet actif dans la navigation
    wizardNavLinks[10].classList.remove('active');
    wizardNavLinks[11].classList.add('active');

    // Passer aria-selected="false" à vert-tabs-general-tab
    const generalTab = document.querySelector('#vert-tabs-general-tab');
    generalTab.setAttribute('aria-selected', 'false');

    // Passer aria-selected="true" à vert-tabs-finance-tab
    const financeTab = document.querySelector('#vert-tabs-finance-tab');
    financeTab.setAttribute('aria-selected', 'true');

    //masquer le formulaire actuel
    const actualForm = document.querySelector('#vert-tabs-general');
    actualForm.classList.remove('active','show');

    // Afficher le formulaire de l'étape suivante
    const nextForm = document.querySelector('#vert-tabs-finance');
    nextForm.classList.add('active','show');
  }
  validateForm2();
  validateForm3();
  validateForm4();
  validateForm5();
}

