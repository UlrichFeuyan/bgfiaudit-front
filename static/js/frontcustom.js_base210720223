function toggleRefContrat(selectElement) {
  var refContratInput = document.getElementById("ref_contrat");
  if (selectElement.value === "Oui") {
    refContratInput.readOnly = false;
    if (ref_contrat.value=='') {
      ref_contrat.classList.add('is-invalid');
    } else {
      ref_contrat.classList.remove('is-invalid');
      ref_contrat.classList.add('is-valid');
    }
  } else {
    ref_contrat.classList.remove('is-invalid');
    ref_contrat.classList.remove('is-valid');
    refContratInput.value="";
    refContratInput.readOnly = true;
  }
}

function toggleRefBl(selectElement){
  if(selectElement.value === "Oui"){
    ref_bl.readOnly = false;
    if (ref_bl.value == '') {
      ref_bl.classList.add('is-invalid');
    } else {
      ref_bl.classList.remove('is-invalid');
      ref_bl.classList.add('is-valid');
    }
  }else{
    ref_bl.classList.remove('is-invalid');
    ref_bl.classList.remove('is-valid');
    ref_bl.readOnly = true;
    ref_bl.value="";
  }
}

